{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "post_title": {
      "type": "string",
      "required": true,
      "default": "***Untitled***"
    },
    "post_body": {
      "type": "richtext",
      "default": "[empty]",
      "required": true
    },
    "post_tags": {
      "type": "text"
    },
    "post_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "via": "posts",
      "collection": "category"
    }
  }
}
